#!/bin/bash

SESSION_NAME="rcb_main"

if tmux has-session -t "$SESSION_NAME" 2>/dev/null; then
    tmux attach-session -t "$SESSION_NAME"
else
    cd ~/ros2_ws/rcb_testing
    source install/setup.bash
    tmux new -s rcb_main \; split-window -v \; split-window -v \; kill-pane -t 2 \; select-pane -t 1 \; send-keys "nvim" Enter
fi

